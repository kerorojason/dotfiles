{
    "workbench.colorTheme": "Spacegray",
    // "vim.startInInsertMode": true,
    // "vim.statusBarColorControl": true,
    // "vim.statusBarColors": {
    //     "insert": "#1b88ad",
    //     "normal": "#acd115",
    //     "visual": "#f48817"
    // },
    // "vim.overrideCopy": false,
    "window.zoomLevel": 0,
    "editor.fontSize": 16.5,
    "editor.fontFamily": "InputMono-ExtraLight, 'Courier New', monospace",
    "editor.minimap.enabled": true,
    "editor.minimap.renderCharacters": false,
    "window.titleBarStyle": "native",
    "editor.renderWhitespace": "boundary",
    "editor.cursorStyle": "line-thin",
    "editor.wordWrap": "on",
    "editor.lineHeight": 28,
    "editor.wrappingIndent": "indent",
    "editor.renderIndentGuides": true,
    "editor.emptySelectionClipboard": false,
    "editor.cursorBlinking": "smooth",
    "editor.renderControlCharacters": true,
    "editor.renderLineHighlight": "gutter",
    "editor.dragAndDrop": true,
    "workbench.activityBar.visible": false,
    "workbench.statusBar.visible": true,
    "terminal.external.osxExec": "iTerm.app",
    "terminal.integrated.shell.osx": "/usr/local/bin/fish",
    "terminal.integrated.shell.linux": "/bin/bash",
    "terminal.integrated.fontFamily": "InconsolataForPowerlineNerdFontCM-Medium",
    "terminal.integrated.fontSize": 18,
    "terminal.integrated.lineHeight": 1,
    "terminal.integrated.cursorBlinking": true,
    "terminal.integrated.scrollback": 1000,
    "terminal.integrated.confirmOnExit": true,
    "ruby.lint": {
        "rubocop": true
    },
    "workbench.welcome.enabled": false,
    "[cpp]": {
        "editor.quickSuggestions": true
    },
    "[c]": {
        "editor.quickSuggestions": true
    },
    "[markdown]": {
        "editor.quickSuggestions": true
    },
    "workbench.sideBar.location": "left",
    "editor.snippetSuggestions": "top",
    "editor.quickSuggestionsDelay": 1,
    "editor.acceptSuggestionOnEnter": true,
    "newFile.relativeTo": "project",
    "newFile.defaultFileExtension": "",
    "newFile.defaultBaseFileName": "new_file",
    "newFile.showFullPath": false
}
