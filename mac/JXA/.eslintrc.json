{
  "parser": "babel-eslint",
  "extends": [
    "eslint:recommended",
    "airbnb"
  ],
  "rules": {
    "no-eval": ["off"],
    "no-use-before-define": ["warn"],
    "no-restricted-syntax": ["off"],
    "no-return-assign": ["off"],
    "no-plusplus": ["off"],
    "semi": ["error", "never"],
    "max-len": ["warn", 120],
    "quote-props": ["warn"],
    "class-methods-use-this": ["warn"]
  },
  "env": {
    "es6": true
  },
  "globals": {
    "Application": true,
    "Path": true,
    "Progress": true,
    "delay": true
  }
}
